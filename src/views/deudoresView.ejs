<% include partials/_header %>

<!--<pre><%= data[1].nombre %></pre>-->
    <div class= "container rounded" id="front1">
        <div class="row mt-5">
            <h4 class="mt-3 ml-3">Lista de Deudores</h4><br>
            <div class = "col-md-14" style="overflow-y:scroll; height:850px;"><br>  
                <table class="table "> 
                    <thead class="cabeza">
                        <tr>
                            <th>Nombre</th>
                            <th>Id Deudo</th>
                            <th>Region</th>
                            <th>Tel. Contacto</th>
                            <th>Tel. Movil</th>
                            <th>Acuerdo de Pago</th>
                            <th>Fecha Vencimiento</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (data){ %>
                            <% for (var i = 0; i< data.length; i++) {%>
                            <tr>
                                <td><%= data[i].nombre%></td>
                                <td><%= data[i].ID%></td>
                                <td><%= data[i].REGION%></td>
                                <td><%= data[i].TELEFONOCONTACTO%></td>
                                <td><%= data[i].MOVILCONTACTO%></td>
                                <td><%= data[i].FECHA_ULTIMO_PAGO%></td>
                                <td><%= data[i].FECHACONTACTO%></td>
                                <td>   
                                    <a  class="btn btn-success" data-toggle="modal" data-target="#exampleModalCenter"><i class="fas fa-phone-square" style="font-size: 2em;"></i></a>
                                    <!--<a href="/update1/<%= data[i].idEmpleado%>" class="btn btn-info">Editar</a>
                                    <a href="/delete/<%= data[i].idEmpleado%>" class="btn btn-danger">Borrar</a>-->
                                </td>
                                <script>
                                var llamdaId = <%- JSON.stringify(data[i].ID) %>;
                                llamdaId = '/call1/'+llamdaId;
                                
                                </script>
                            </tr>    
                        <% } %>
                    <% } %>

                    </tbody>
                </table>
            </div>
<!--------------------------------------- Modal ----------------------------------------->

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle"></i>Desea llamar?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="align-items-center">
                <i class="fas fa-phone-square" style="font-size: 5em;"></i><br><br>
            </div>
            <div class="modal-footer">
                <a href="" id="llamarModal" class="btn btn-success">Llamar</a>
                <script>
                    var a = document.getElementById('llamarModal');
                                    if (a) 
                                    {
                                        a.href = llamdaId;
                                    }
                </script>
            </div>
        </div>
    </div>
</div>
        </div>
    </div>
    
 



<% include partials/_footer %>